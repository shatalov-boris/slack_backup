%h2= channel_name(@channel)

.row
  .col-xs-12
    - if @messages.empty?
      There are no messages.
  %table.table.table-striped
    - @messages.each do |message|
      %tr
        %td.username
          %img{src: message.user.avatar, class: "user-avatar"}
          = message.user.name
        %td
          = emojify(MessageFormatter.new(message.text).format)
          %span.dt= message.ts.strftime("%d %b %Y %H:%M")
.row
  .col-xs-12
    = paginate @messages, window: 3, theme: "twitter-bootstrap-3"
